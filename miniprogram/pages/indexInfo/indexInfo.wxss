/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: #F9FAFE;
  font-family: Source Han Sans CN;
  font-size: 28rpx;
  overflow: hidden;
  overflow-y:scroll;
  position: relative; 
}
.container{
  width: 90%;
  padding: 0 5%;
  margin: 0 auto;
}
.screen {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 50rpx;
  line-height: 50rpx;
  background: #f6f6f6;
}
.topnav{
  position: fixed;
  top: 0rpx;
  left: 5%;
  width: 90%;
  position: fixed;
  height: 50rpx;
  line-height: 50rpx;
  z-index: 100;
}
.screen>view {
  font-family: SourceHanSansCN;
  font-size: 26rpx;
  line-height: 30rpx;
  text-align: center;
  letter-spacing: 4.33333rpx;
  text-transform: uppercase;
  color: #6C7B8A; 
  position: relative;
}
.screen>view:nth-child(1)>van-icon:nth-child(2) {
  position: absolute;
  top: 0rpx;
  left: 74rpx;
  font-size: 24rpx;
}
.screen>view:nth-child(1)>van-icon:nth-child(3) {
  position: absolute;
  top: 10rpx;
  left: 74rpx;
  font-size: 24rpx;
}
.screen>view:nth-child(2)>van-icon:nth-child(2) {
  position: absolute;
  top: 0rpx;
  left: 30rpx;
  font-size: 24rpx;
}
.screen>view:nth-child(2)>van-icon:nth-child(3) {
  position: absolute;
  top: 10rpx;
  left: 30rpx;
  font-size: 24rpx;
}
.screen>view:nth-child(3)>van-icon:nth-child(2) {
  position: absolute;
  top: 0rpx;
  left: 122rpx;
  font-size: 24rpx;
}
.screen>view:nth-child(3)>van-icon:nth-child(3) {
  position: absolute;
  top: 10rpx;
  left: 122rpx;
  font-size: 24rpx;
}
.screen>view:nth-child(4)>van-icon:nth-child(2) {
  position: absolute;
  top: 0rpx;
  left: 125rpx;
  font-size: 24rpx;
}
.screen>view:nth-child(4)>van-icon:nth-child(3) {
  position: absolute;
  top: 10rpx;
  left: 125rpx;
  font-size: 24rpx;
}
.screen>.screen1 {
  font-family: SourceHanSansCN;
  font-size: 26rpx;
  line-height: 30rpx;
  text-align: center;
  letter-spacing: 4.33333rpx;
  text-transform: uppercase;
  color: #FF6B00;
}
.info {
  background: #FFFFFF;
  box-shadow: 0px 3rpx 29rpx rgba(59, 74, 116, 0.135473);
  border-radius: 10rpx;
  margin: 25rpx 0;
  padding: 15rpx 20rpx;
}
.infoTitle {
  font-family: SourceHanSansCN;
  font-size: 30rpx;
  line-height: 25rpx;
  color: #101010;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  display: block;
}
.info1 {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
}
.infoImg {
  width: 30%;
  height: 243rpx;
}
.infoIn {
  margin-left: 32rpx;
  width: 70%;
}
.press {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.press>view:nth-child(1) {
  font-family: SourceHanSansCN;
  font-size: 26rpx;
  line-height: 23px;
  color: #3366CC;
}
.act {
  background: #FF6B00 !important;
}
.press>button:nth-child(2) {
  background: #6C7B8A;
  border-radius: 8rpx 0px 0px 8rpx;
  color: #fff;
  margin-right: -20rpx;
  padding: 0 10rpx;
  width: auto !important;
  height: 23px !important;
  line-height: 23px !important;
  font-size: 26rpx !important;
}
.infoIn1>text {
  font-family: SourceHanSansCN;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #6C7B8A;
  display: inline-block;
  margin:10rpx 0;
}
.ifjishi{
  display: flex;
  flex-direction: row;
  margin-top:15rpx;
}
.alertDialog {
  /* 对话框：一个圆角矩形和一个小三角形 */
  width: 86rpx;
  height: 86rpx;
  background: linear-gradient(144.07deg, #629FE8 -11.05%, #3366CC 100%);
  position: relative;
  font-family: SourceHanSansCN;
  font-size: 30rpx;
  line-height: 30rpx;
  display: flex;
  align-items: center;
  text-align: center;
  color: #FFFFFF;
  text-shadow: 0px 2rpx 4rpx #3669CE;
  margin-right: 16rpx;
}
.alertDialog:after {
  content: "";
  width: 0;
  height: 0;
  position: absolute;
  right: -20rpx;
  top: 30rpx;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-left: 20rpx solid #467DD7; 
}
.ifTop {
  display: flex;
  flex-direction: row;
  line-height: 30rpx;
}
.ifTop>view:nth-child(1)>text {
  font-family: SourceHanSansCN;
  font-size: 20rpx;
  letter-spacing: 1.2rpx;
  margin-right: 8rpx;
}
.ifTop>view:nth-child(2) {
  border: 1px solid #FF6B00;
  font-family: SourceHanSansCN;
  font-size: 14rpx;
  color: #FF6B00;
  padding:0 6rpx;
}
.ifBottom>text {
  display: inline-block;
  font-family: SourceHanSansCN;
  font-size: 40rpx;
  line-height: 47rpx;
  margin-top: 5rpx;
  margin-right: 8rpx;
}
.buts {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.ifzhi {
  margin-bottom: 30rpx;
}
.buts>button:not([size='mini']) {
  width: 150rpx;
  min-height: 40rpx;
  margin:10rpx 10rpx 0rpx 0rpx;
  color: #000;
  font-weight: 500;
  border-radius: 10rpx;
  background-color: #F9FAFE;
  font-size: 12px;
  text-align: center;
  padding: 10rpx 0;
  border: 1rpx solid #F9FAFE;
}
.button-hover {
  color: #000;
  background-color: #F9FAFE;
}
.shai {
  padding: 30rpx 20rpx;
  
}
.active {
  color: #FF6B00!important;
  border: 1rpx solid #FF6B00!important;
}
.footer1{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
}
.footer1>button:not([size='mini']):nth-child(1) {
  width: 50%;
  min-height: 40rpx;
  color: #000;
  font-weight: 500;
  background-color: #fff;
  font-size: 12px;
  text-align: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #F9FAFE;
  border-radius: 0;
}
.footer1>button:not([size='mini']):nth-child(2) {
  width: 50%;
  min-height: 40rpx;
  color: #fff;
  font-weight: 500;
  background-color: #FF6B00;
  font-size: 12px;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 0;
}