/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: #F9FAFE;
  font-family: Source Han Sans CN;
  font-size: 28rpx;
}
.container{
  width: 90%;
  margin:0 auto;
}
.zzsearch {
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
  box-shadow: 0px 3px 29px rgba(59, 74, 116, 0.135473);
  border-radius: 34rpx;
  height: 68rpx;
  line-height: 68rpx;
}
.zzsearch>input {
  height: 68rpx;
  line-height: 68rpx;
  margin-left: 16rpx;
  width: 70%;
}
.zzsearch>view {
  display: flex;
  flex-direction: row;
  width: 25%;
}
.remen {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top:40rpx;
  color: #6C7B8A;
  height: 42rpx;
  line-height: 42rpx;
}
.remen1 {
  width: 100%;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.remen1>button {
  padding: 8rpx 27rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 4px rgba(167, 174, 224, 0.5);
  border-radius: 36rpx;
  color: #101010;
  background-color: #fff;
  margin:10rpx;
  font-weight: 500;
  line-height: 40rpx;
  font-size: 14px;
}
.share {
  background: none;
  font-weight: 500;
}